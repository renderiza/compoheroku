= simple_form_for @scene, html: { multipart: true } do |f|
	- if @scene.errors.any?
		#errors
			%h2
			= pluralize(@scene.errors.count, "error")
			prevented this Scene from saving
			%ul
				- @scene.errors.full_messages.each do |msg|
					%li = msg
	
	.form-group
		= f.input :image, input_htm: { class: 'form-control' }

	.form-group
		= f.input :name, input_htm: { class: 'form-control' }

	.form-group
		= f.input :description, input_htm: { class: 'form-control' }

	%br/



	.container



		%h4= "View Settings"

		%br/

		.checkbox
			= f.input :hidden, type: "checkbox"
		
		%hr/

		%h4= "Shadow Settings"
		.form-group
			= f.input :shadows, input_htm: { class: 'form-control' }

		.form-group
			= f.input :light, as: :slider, min: 0, max: 100, input_htm: { class: 'form-control' }

		.form-group
			= f.input :dark, as: :slider, min: 0, max: 100, input_htm: { class: 'form-control' }

		.form-group
			= f.input :sun, input_htm: { class: 'form-control' }

		%hr/

		%h4= "Edges Settings"

		%br/

		%ul.list-group
			%li.list-group-item
				= f.input :edge, input_htm: { class: 'form-control' }
			%li.list-group-item
				= f.input :profiles, input_htm: { class: 'form-control' }
			%li.list-group-item
				= f.input :depth_cue, input_htm: { class: 'form-control' }
			%li.list-group-item
				= f.input :endpoints, input_htm: { class: 'form-control' }

		%hr/

		%h4= "Face Settings"

		%br/

		%ul.list-group
			%li.list-group-item
				.radio
					= f.input :render_mode,label: false, as: :radio_buttons, collection: [['0', 'Wireframe'], ['1', 'Hidden Line'], ['2', 'Shaded'], ['3', 'Textured'], ['4', 'Monochrome']], label_method: :second, value_method: :first

		%hr/

		%h4= "Background Settings"
		
		%br/
		.panel-bod

			%ul.list-group
				%li.list-group-item
				
					.row
						.col-md-2.col-sm-2.col-xs-2
							
							%h4 Background

						.col-md-4.col-sm-4.col-xs-4
							
							= f.input :bg_color, :label => "", label: false, as: :color, input_htm: { class: 'form-control' }
							
				%li.list-group-item
					.row
						.col-md-2.col-sm-2.col-xs-2
							
							= f.input :draw_sky, :label => "Sky", input_htm: { class: 'form-control' }

						.col-md-4.col-sm-4.col-xs-4
							
							= f.input :sky_color, :label => "", label: false, as: :color, input_htm: { class: 'form-control' }
				
				%li.list-group-item

					.row
						.col-md-2.col-sm-2.col-xs-2
							
							= f.input :draw_ground, :label => "Ground", input_htm: { class: 'form-control' }

						.col-md-4.col-sm-4.col-xs-4
							
							= f.input :ground_color, :label => "", label: false, as: :color, input_htm: { class: 'form-control' }


		
		%hr/

		%h4= "Fog Settings"

		%br/

		.panel-bod

			%ul.list-group
				%li.list-group-item

					.row
						.col-md-2.col-sm-2.col-xs-2
							= f.input :fog, :label => "Fog", input_htm: { class: 'form-control' }

						.col-md-2.col-sm-2.col-xs-2
							= f.input :fog_color, :label => "", label: false, as: :color, input_htm: { class: 'form-control' }

				%li.list-group-item

					.row
						.col-md-6.col-sm-6.col-xs-6
							= f.input :fog_use_bk, :label => "Use Background Color", input_htm: { class: 'form-control' }

		

		%hr/

		%h4= "Layers Settings"
		.form-group
			= f.input :color_by_layer, input_htm: { class: 'form-control' }





	%hr/
	.form-group
		= f.label :board
		%br/
		= f.select :board_id, options_from_collection_for_select(current_user.boards, "id", "name")
	
	%br/
	%br/
	= f.button :submit, class: "btn btn-primary"
	%br/
	%br/